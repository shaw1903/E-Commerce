@model E_Commerce.Models.SendMailModel
@{
    ViewData["Title"] = "Contact";
}
<div class="container">
  <div class="row col mt-5 font-weight-bold">
    <h1>Contact Us</h1>
      </div>
      <div class="row col font-weight-normal mb-5">
    <p>At Juma Photography we would love to hear from you, you can contact us by completing the enquiry form below or by calling us with the details provided.</p>
    </div>
</div>
        <div class="container">
            <div class="row">
                <div class="col">
                    <form name="contactForm" asp-action="Contact" method="post" width="100px" >
                        <div class="form-group">
                            <label asp-for="FromName">Name</label>
                            <input asp-for="FromName" class="form-control" />
                            <span asp-validation-for="FromName" 
                            class="text-muted"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ReturnEmailAddress">Email Address</label>
                            <input asp-for="ReturnEmailAddress" class="form-control" />
                            <span asp-validation-for="ReturnEmailAddress" 
                            class="text-muted"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Subject">Subject</label>
                            <input asp-for="Subject" class="form-control">
                            <span asp-validation-for="Subject" 
                            class="text-muted"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Body">Message</label>
                            <textarea rows="5" cols="15" 
                            asp-for="Body" class="form-control"></textarea>
                            <span asp-validation-for="Body" 
                            class="text-muted"></span>
                        </div>
                        <div class="mx-auto">
                        <button type="submit" class="btn btn-primary text-right"> Send </button></div>
                    </form>
                </div>
                <div class="col-12 col-sm-4">
                        <div class="card mb-3 border-0 bg-white">
                            <div class="card-header bg-white"></i> Or feel free to send your enquiry directly to:</div>
                            <div class="card-body">
                                <p>Sian Lyon</p>
                                <p>Email : email@example.com</p>
                                <p>Tel. +33 12 56 11 51 84</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <div>
                @if (ViewBag.Message != null)
            {
                    <div>@ViewBag.Message</div>
                }
            </div>
        </div>
    </div>